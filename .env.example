# Security Tools Platform Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# PROJECT CONFIGURATION
# ============================================================================

# Google Cloud Project Configuration
PROJECT_ID=demo-project
ORGANIZATION_ID=your-org-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite (Development)
DATABASE_PATH=data/security_tools.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/security_tools

# ============================================================================
# API KEYS & AUTHENTICATION
# ============================================================================

# Brave Search API (for web intelligence)
BRAVE_API_KEY=your_brave_api_key_here

# GitHub Personal Access Token (for repository analysis)
GITHUB_TOKEN=your_github_personal_access_token

# Security Keys
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================

# Threat Intelligence Sources
OTX_API_KEY=your_otx_api_key
VIRUSTOTAL_API_KEY=your_virustotal_api_key
SHODAN_API_KEY=your_shodan_api_key

# SIEM Integrations
SPLUNK_HOST=your-splunk-host
SPLUNK_PORT=8089
SPLUNK_USERNAME=your-splunk-user
SPLUNK_PASSWORD=your-splunk-password

# Notification Services
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

PAGERDUTY_API_KEY=your_pagerduty_api_key
PAGERDUTY_SERVICE_ID=your_service_id

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Access Control
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
TRUSTED_PROXIES=127.0.0.1

# Session Configuration
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Platform Features
ENABLE_CLOUD_DISCOVERY=true
ENABLE_THREAT_INTEL=true
ENABLE_ML_MODELS=true
ENABLE_AUTO_REMEDIATION=false

# Demo & Development Features
ENABLE_DEMO_MODE=true
ENABLE_SAMPLE_DATA=true
ENABLE_DEBUG_ENDPOINTS=false

# ============================================================================
# ML MODEL CONFIGURATION
# ============================================================================

# Model Training
ML_MODEL_PATH=models/
RETRAIN_INTERVAL_HOURS=168  # Weekly retraining
FEATURE_STORE_PATH=data/features/

# Performance Thresholds
CONFIDENCE_THRESHOLD=0.8
ANOMALY_THRESHOLD=0.9
RISK_SCORE_THRESHOLD=7.0

# ============================================================================
# COMPLIANCE SETTINGS
# ============================================================================

# NIST Framework
NIST_CONTROLS=AC-2,AC-3,AC-6,AU-2,AU-3,SC-7,SC-8,IA-2,IA-5
COMPLIANCE_SCAN_INTERVAL=86400  # Daily
AUDIT_RETENTION_DAYS=2555  # 7 years for financial compliance

# Regulatory Requirements
SOX_COMPLIANCE=true
PCI_DSS_COMPLIANCE=true
GDPR_COMPLIANCE=true

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Metrics Collection
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_RETENTION_DAYS=30

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=logs/security-platform.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=90

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development Tools
AUTO_RELOAD=true
ENABLE_PROFILING=false
ENABLE_TESTING_ENDPOINTS=true

# Sample Data Generation
SAMPLE_ALERTS_COUNT=100
SAMPLE_ASSETS_COUNT=50
SAMPLE_COMPLIANCE_CONTROLS=9

# Demo Configuration
DEMO_FINANCIAL_CONTEXT=true
DEMO_SWIFT_INTEGRATION=true
DEMO_REALISTIC_TIMING=true

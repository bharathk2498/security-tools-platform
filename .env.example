# Core Configuration
PROJECT_ID=demo-project
ENVIRONMENT=production
DATABASE_PATH=data/security_tools.db

# API Keys (Replace with your actual keys)
BRAVE_API_KEY=your_brave_search_api_key_here
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here
SHODAN_API_KEY=your_shodan_api_key_here

# Google Cloud Configuration (Optional)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Security Settings
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Configuration
DATABASE_URL=sqlite:///data/security_tools.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Web Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
DEBUG=false
RELOAD=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/security-platform.log

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# External Service URLs
CISA_KEV_URL=https://www.cisa.gov/sites/default/files/feeds/known_exploited_vulnerabilities.json
MISP_URL=your-misp-instance-url
OTX_API_KEY=your-alienvault-otx-api-key

# Compliance Settings
AUDIT_RETENTION_DAYS=2555
COMPLIANCE_SCAN_INTERVAL=86400
AUTO_REMEDIATION_ENABLED=true

# Performance Settings
MAX_CONCURRENT_SCANS=10
SCAN_TIMEOUT=3600
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600

# Notification Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@company.com
SMTP_PASSWORD=your-email-password
NOTIFICATION_RECIPIENTS=security-team@company.com,compliance@company.com

# Monitoring & Observability
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true

# Feature Flags
ENABLE_ML_TRIAGE=true
ENABLE_AUTO_RESPONSE=true
ENABLE_COMPLIANCE_AUTO_REMEDIATION=true
ENABLE_THREAT_INTELLIGENCE=true
ENABLE_FINANCIAL_FRAUD_DETECTION=true

# Development Settings (Only for development)
DEVELOPMENT_MODE=false
MOCK_EXTERNAL_APIS=false
SAMPLE_DATA_MODE=true
VERBOSE_LOGGING=false
